<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainMenuFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

   <ImageView
    android:id="@+id/logo_eva"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/logo_eva"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/icon_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" X "
        android:textSize="75sp"
        android:textColor="@color/EVA_primary_variant"
        android:fontFamily="@font/reenie_beanie"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/logo_eva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_option"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/fcb_name"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/icon_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/logo_fcb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_fcb"
        app:layout_constraintTop_toTopOf="@id/btn_option"
        app:layout_constraintBottom_toBottomOf="@id/btn_option"
        app:layout_constraintEnd_toStartOf="@id/btn_option"
        android:layout_marginEnd="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
